{
  "expo": {
    "name": "ISP Field Manager",
    "slug": "isp-field-manager",
    "version": "2.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taskmanager.isp",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para tirar fotos dos serviços realizados.",
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar a galeria para selecionar fotos dos serviços.",
        "NSLocationWhenInUseUsageDescription": "Este app precisa acessar sua localização para mostrar tarefas próximas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1e40af"
      },
      "package": "com.taskmanager.isp",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-notifications",
      "expo-location",
      "expo-camera",
      "expo-image-picker"
    ],
    "extra": {
      "eas": {
        "projectId": "4ad1bf7a-fa99-43c0-8952-366066ff7266"
      }
    }
  }
}
